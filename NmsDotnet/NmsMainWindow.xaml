<Window
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        x:Class="NmsDotNet.NmsMainWindow"
        mc:Ignorable="d"
        WindowState="Maximized" WindowStyle="ThreeDBorderWindow"
        Title="AMS" MinHeight="800" MinWidth="1080"
        FontFamily="D2Coding"
        WindowStartupLocation="CenterScreen"
        Loaded="Window_Loaded"
        Closing="Window_Closing">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40" />
            <RowDefinition Height="*" />
            <RowDefinition Height="250" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <materialDesign:DialogHost CloseOnClickAway="True" Identifier="DialogGroup" CloseOnClickAwayParameter="group" DialogClosing="ClosingGroupDialogEventHandler"
                                VerticalAlignment="Center" HorizontalAlignment="Center">
            <materialDesign:DialogHost.DialogContentTemplate>
                <DataTemplate>
                    <Grid Width="400" Height="300">
                        <StackPanel Orientation="Horizontal" Margin="15">
                            <materialDesign:PackIcon Kind="InfoOutline" Width="50" Height="50" />
                            <TextBox MaxWidth="200" Text="{Binding Name}" materialDesign:HintAssist.Hint="그룹 이름" />
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="15">
                            <Button Command="{x:Static materialDesign:DialogHost.CloseDialogCommand}"
                                    Margin="4" VerticalAlignment="Center">
                                <Button.CommandParameter>
                                    <system:Boolean xmlns:system="clr-namespace:System;assembly=mscorlib">False</system:Boolean>
                                </Button.CommandParameter>
                                취소
                            </Button>
                            <Button Command="{x:Static materialDesign:DialogHost.CloseDialogCommand}"
                                    Margin="4" VerticalAlignment="Center">
                                <Button.CommandParameter>
                                    <system:Boolean xmlns:system="clr-namespace:System;assembly=mscorlib">True</system:Boolean>
                                </Button.CommandParameter>
                                입력
                            </Button>
                        </StackPanel>
                    </Grid>
                </DataTemplate>
            </materialDesign:DialogHost.DialogContentTemplate>
        </materialDesign:DialogHost>

        <materialDesign:DialogHost Identifier="DialogServer" BorderBrush="{DynamicResource MaterialDesignDivider}" VerticalAlignment="Center"
                                   DialogClosing="ClosingServerDialog" HorizontalAlignment="Center">
            <materialDesign:DialogHost.DialogContentTemplate>
                <DataTemplate>
                    <Grid Width="400" Height="300">
                        <StackPanel Orientation="Horizontal" Margin="15">
                            <materialDesign:PackIcon Kind="InfoOutline" Width="50" Height="50" />
                            <StackPanel>
                                <TextBox MaxWidth="200" Text="{Binding Name }" materialDesign:HintAssist.Hint="장비 이름" Style="{StaticResource MaterialDesignFloatingHintTextBox}" />
                                <TextBox MaxWidth="200" Text="{Binding Ip}" materialDesign:HintAssist.Hint="IP" />
                                <ComboBox x:Name="CbGroup" materialDesign:HintAssist.Hint="그룹 선택(필수)" ItemsSource="{Binding Groups}" SelectedValuePath="Id" SelectedValue="{Binding Gid}">
                                    <ComboBox.ItemTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding Name}" />
                                        </DataTemplate>
                                    </ComboBox.ItemTemplate>
                                </ComboBox>
                            </StackPanel>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="15">
                            <Button Command="{x:Static materialDesign:DialogHost.CloseDialogCommand}"
                                    Margin="4" VerticalAlignment="Center">
                                <Button.CommandParameter>
                                    <system:Boolean xmlns:system="clr-namespace:System;assembly=mscorlib">False</system:Boolean>
                                </Button.CommandParameter>
                                취소
                            </Button>
                            <Button Command="{x:Static materialDesign:DialogHost.CloseDialogCommand}"
                                    Margin="4" VerticalAlignment="Center">
                                <Button.CommandParameter>
                                    <system:Boolean xmlns:system="clr-namespace:System;assembly=mscorlib">True</system:Boolean>
                                </Button.CommandParameter>
                                입력
                            </Button>
                        </StackPanel>
                    </Grid>
                </DataTemplate>
            </materialDesign:DialogHost.DialogContentTemplate>
        </materialDesign:DialogHost>

        <materialDesign:DialogHost CloseOnClickAway="True" Identifier="DialogSettingInfo" DialogClosing="ClosingSettingDialogEventHandler"
                                   VerticalAlignment="Center" HorizontalAlignment="Center">
            <materialDesign:DialogHost.DialogContentTemplate>
                <DataTemplate>
                    <Grid Width="600" Height="800">

                        <GroupBox Header="알림설정" FontSize="14">
                            <ScrollViewer VerticalScrollBarVisibility="Auto">
                                <ItemsControl ItemsSource="{Binding Settings}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <StackPanel Orientation="Vertical"></StackPanel>
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Vertical" Margin="10,8">
                                                <CheckBox FontSize="16" IsChecked="{Binding IsEnable}"
                                            Content="{Binding Name}"></CheckBox>
                                            </StackPanel>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </ScrollViewer>
                        </GroupBox>

                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="15">
                            <Button Command="{x:Static materialDesign:DialogHost.CloseDialogCommand}"
                                    Margin="4" VerticalAlignment="Center">
                                <Button.CommandParameter>
                                    <system:Boolean xmlns:system="clr-namespace:System;assembly=mscorlib">False</system:Boolean>
                                </Button.CommandParameter>
                                취소
                            </Button>
                            <Button Command="{x:Static materialDesign:DialogHost.CloseDialogCommand}"
                                    Margin="4" VerticalAlignment="Center">
                                <Button.CommandParameter>
                                    <system:Boolean xmlns:system="clr-namespace:System;assembly=mscorlib">True</system:Boolean>
                                </Button.CommandParameter>
                                입력
                            </Button>
                        </StackPanel>
                    </Grid>
                </DataTemplate>
            </materialDesign:DialogHost.DialogContentTemplate>
        </materialDesign:DialogHost>

        <materialDesign:DialogHost CloseOnClickAway="True" Identifier="DialogLogViewInfo" DialogClosing="ClosingLogViewDialogEventHandler"
                                   VerticalAlignment="Center" HorizontalAlignment="Center">
            <materialDesign:DialogHost.DialogContentTemplate>
                <DataTemplate>
                    <Grid Width="1440" Height="960">
                        <GroupBox Header="로그" FontSize="14">

                            <ListView x:Name="DialogLvLog" ItemsSource="{Binding Logs}"
                          ScrollViewer.CanContentScroll="True"
                          ScrollViewer.IsDeferredScrollingEnabled="True"
                          ScrollViewer.VerticalScrollBarVisibility="Visible">
                                <ListView.Resources>
                                    <Style TargetType="{x:Type ListViewItem}">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsConfirm}" Value="N">
                                                <Setter Property="Background" Value="Red" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                    <Style x:Key="myHeaderStyle" TargetType="{x:Type GridViewColumnHeader}">
                                        <Setter Property="Background" Value="LightBlue" />
                                    </Style>

                                    <DataTemplate x:Key="myHeaderTemplate">
                                        <DockPanel>
                                            <CheckBox />
                                            <TextBlock FontSize="16" Foreground="DarkBlue" Text="{Binding}" />
                                        </DockPanel>
                                    </DataTemplate>
                                    <DataTemplate x:Key="myCellTemplateLevel">
                                        <StackPanel Orientation="Horizontal">
                                            <Ellipse
                                         Width="10"
                                         Height="10"
                                         Fill="{Binding Color}" Margin="5,0" />
                                            <TextBlock Foreground="{Binding Color}" HorizontalAlignment="Center" Text="{Binding Level}"></TextBlock>
                                        </StackPanel>
                                    </DataTemplate>
                                </ListView.Resources>

                                <ListView.View>
                                    <GridView AllowsColumnReorder="False" ColumnHeaderToolTip="Log">
                                        <GridViewColumn Header="Start at" Width="150" DisplayMemberBinding="{Binding StartAt}" />
                                        <GridViewColumn Header="End at" Width="150" DisplayMemberBinding="{Binding EndAt}" />
                                        <GridViewColumn Header="Name" Width="150" DisplayMemberBinding="{Binding Name}" />
                                        <GridViewColumn Header="IP address" Width="130" DisplayMemberBinding="{Binding Ip}" />
                                        <GridViewColumn Header="Level" Width="100" CellTemplate="{StaticResource myCellTemplateLevel}" />
                                        <GridViewColumn Header="Value"
                                            Width="1250"
                                            DisplayMemberBinding="{Binding Value}" />
                                    </GridView>
                                </ListView.View>
                            </ListView>
                        </GroupBox>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="15">
                            <Button Command="{x:Static materialDesign:DialogHost.CloseDialogCommand}" Style="{StaticResource MaterialDesignFloatingActionLightButton}"
                                    Margin="4" VerticalAlignment="Center">
                                <Button.CommandParameter>
                                    <system:Boolean xmlns:system="clr-namespace:System;assembly=mscorlib">False</system:Boolean>
                                </Button.CommandParameter>
                                <materialDesign:PackIcon
                                    Kind="Close"
                                    Height="24"
                                    Width="24" />
                            </Button>
                        </StackPanel>
                    </Grid>
                </DataTemplate>
            </materialDesign:DialogHost.DialogContentTemplate>
        </materialDesign:DialogHost>

        <Grid Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2">
            <Menu IsMainMenu="True">
                <MenuItem FontSize="12"
                        Header="_파일">
                    <MenuItem x:Name="BtnMenuSetting"
                            Header="설정" Click="BtnMenuSetting_Click">
                        <MenuItem.Icon>
                            <materialDesign:PackIcon Kind="Settings" />
                        </MenuItem.Icon>
                    </MenuItem>
                    <MenuItem Header="알림끄기" Click="HiddenAlarm_Click">
                        <MenuItem.Icon>
                            <materialDesign:PackIcon Kind="Hide" />
                        </MenuItem.Icon>
                    </MenuItem>
                    <MenuItem Header="기록보기" Click="LogView_Click">
                        <MenuItem.Icon>
                            <materialDesign:PackIcon Kind="Book" />
                        </MenuItem.Icon>
                    </MenuItem>
                </MenuItem>
            </Menu>
        </Grid>

        <Grid Grid.Row="1" Grid.Column="0">
            <TreeView x:Name="TreeGroup"
                      SelectedItemChanged="TreeGroup_SelectedItemChanged"
                      PreviewMouseRightButtonDown="TreeGroup_PreviewMouseRightButtonDown" Grid.ColumnSpan="2">
                <TreeView.ContextMenu>
                    <ContextMenu>
                        <MenuItem x:Name="MenuGroupAdd" Header="그룹 추가" Click="MenuGroupAdd_Click" />
                        <MenuItem x:Name="MenuGroupEdit" Header="그룹 수정" Click="MenuGroupEdit_Click" />
                        <MenuItem x:Name="MenuGroupDel" Header="그룹 삭제"  Click="MenuGroupDel_Click" />
                    </ContextMenu>
                </TreeView.ContextMenu>

                <TreeView.ItemTemplate>
                    <HierarchicalDataTemplate ItemsSource="{Binding Servers}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding Name}" />
                        </StackPanel>
                        <HierarchicalDataTemplate.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Name}" />
                            </DataTemplate>
                        </HierarchicalDataTemplate.ItemTemplate>
                    </HierarchicalDataTemplate>
                </TreeView.ItemTemplate>
            </TreeView>
        </Grid>
        <Grid Grid.Row="1" Grid.Column="1">
            <WrapPanel>
                <WrapPanel.Background>
                    <ImageBrush ImageSource="/Asset/AtemeLogo.jpg" Stretch="Fill" Opacity="0.04" />
                </WrapPanel.Background>
                <StackPanel>
                    <StackPanel Margin="10">
                        <ListView x:Name="ServerListItem" AllowDrop="True" ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                  MouseDoubleClick="ServerList_MouseDoubleClick"
                                  MouseLeftButtonDown="ServerList_MouseLeftButtonDown"
                                  MouseRightButtonDown="ServerList_MouseRightButtonDown">
                            <ListView.ContextMenu>
                                <ContextMenu>
                                    <MenuItem x:Name="MenuServerAdd" Header="장비 추가" Click="MenuServerAdd_Click" />
                                    <MenuItem x:Name="MenuServerEdit" Header="장비 수정" Click="MenuServerEdit_Click" />
                                    <MenuItem x:Name="MenuServerDel" Header="장비 삭제"  Click="MenuServerDel_Click" />
                                </ContextMenu>
                            </ListView.ContextMenu>
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <Border Margin="2" Width="100" Height="60">
                                        <StackPanel>
                                            <Border Width="92" Height="14" CornerRadius="5" Margin="0">
                                                <Border.Effect>
                                                    <DropShadowEffect ShadowDepth="1" />
                                                </Border.Effect>
                                                <Border.Background>
                                                    <ImageBrush ImageSource="{Binding Image}" />
                                                </Border.Background>
                                            </Border>
                                            <TextBlock Margin="1" HorizontalAlignment="Center" Text="{Binding Ip}" FontSize="12" />
                                            <TextBlock Margin="1" HorizontalAlignment="Center" Text="{Binding GroupName}" FontSize="12" />
                                            <TextBlock Margin="1" HorizontalAlignment="Center" Text="{Binding Name}" FontSize="10" />
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ListView.ItemTemplate>

                            <ListView.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel />
                                </ItemsPanelTemplate>
                            </ListView.ItemsPanel>
                        </ListView>
                    </StackPanel>
                </StackPanel>
            </WrapPanel>
        </Grid>
        <Grid Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2">
            <DockPanel Margin="10 0 10 10">
                <!--
                <DataGrid x:Name="DgLog"
                    Margin="0 8 0 0"
                    CanUserSortColumns="True"
                    CanUserAddRows="False" CanUserDeleteRows="False"
                    materialDesign:DataGridAssist.CellPadding="4 2 2 2"
                    materialDesign:DataGridAssist.ColumnHeaderPadding="4 2 2 2"
                    ScrollViewer.CanContentScroll="True"
                    ScrollViewer.IsDeferredScrollingEnabled="True"
                    ScrollViewer.VerticalScrollBarVisibility="Visible">
                </DataGrid>
                -->
                <ListView x:Name="LvLog"
                          ScrollViewer.CanContentScroll="True"
                          ScrollViewer.IsDeferredScrollingEnabled="True"
                          ScrollViewer.VerticalScrollBarVisibility="Visible">
                    <ListView.Resources>
                        <Style TargetType="{x:Type ListViewItem}">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsConfirm}" Value="N">
                                    <Setter Property="Background" Value="Red" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                        <Style x:Key="myHeaderStyle" TargetType="{x:Type GridViewColumnHeader}">
                            <Setter Property="Background" Value="LightBlue" />
                        </Style>

                        <DataTemplate x:Key="myHeaderTemplate">
                            <DockPanel>
                                <CheckBox />
                                <TextBlock FontSize="16" Foreground="DarkBlue" Text="{Binding}" />
                            </DockPanel>
                        </DataTemplate>
                        <DataTemplate x:Key="myCellTemplateLevel">
                            <StackPanel Orientation="Horizontal">
                                <Ellipse
                                         Width="10"
                                         Height="10"
                                         Fill="{Binding Color}" Margin="5,0" />
                                <TextBlock Foreground="{Binding Color}" HorizontalAlignment="Center" Text="{Binding Level}"></TextBlock>
                            </StackPanel>
                        </DataTemplate>
                    </ListView.Resources>
                    <ListView.View>
                        <GridView AllowsColumnReorder="False" ColumnHeaderToolTip="Log">
                            <GridViewColumn Header="Start at" Width="150" DisplayMemberBinding="{Binding StartAt}" />
                            <GridViewColumn Header="End at" Width="150" DisplayMemberBinding="{Binding EndAt}" />
                            <GridViewColumn Header="Name" Width="150" DisplayMemberBinding="{Binding Name}" />
                            <GridViewColumn Header="IP address" Width="130" DisplayMemberBinding="{Binding Ip}" />
                            <GridViewColumn Header="Level" Width="100" CellTemplate="{StaticResource myCellTemplateLevel}" />
                            <GridViewColumn Header="Value"
                                            Width="1250"
                                            DisplayMemberBinding="{Binding Value}" />
                        </GridView>
                    </ListView.View>
                </ListView>
            </DockPanel>
        </Grid>
    </Grid>
</Window>
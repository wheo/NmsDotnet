<Window x:Class="NmsDotNet.NmsMainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NmsDotNet"
        mc:Ignorable="d"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        WindowState="Maximized" WindowStyle="ThreeDBorderWindow"
        Title="AMS" MinHeight="800" MinWidth="1080"
        FontFamily="D2Coding"
        WindowStartupLocation="CenterScreen"
        Loaded="Window_Loaded"
        Closing="Window_Closing">

    <Window.Resources>
        <Style x:Key="CenterGridHeaderStyle" TargetType="DataGridColumnHeader">
            <Setter Property="HorizontalContentAlignment" Value="Center" />
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition Height="*" />
            <RowDefinition Height="250" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="190" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Grid.ColumnSpan="2" Grid.RowSpan="3">
            <materialDesign:DialogHost x:Name="DialogGroup" BorderBrush="{DynamicResource MaterialDesignDivider}" VerticalAlignment="Center" HorizontalAlignment="Center">
                <materialDesign:DialogHost.DialogContent>
                    <Grid Width="400" Height="300">
                        <StackPanel Orientation="Horizontal" Margin="15">
                            <materialDesign:PackIcon Kind="InfoOutline" Width="50" Height="50" />
                            <TextBox MaxWidth="200" x:Name="TbGroupName" materialDesign:HintAssist.Hint="그룹 이름" />
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="15">
                            <Button x:Name="BtnGroupAdd" Click="BtnGroupAdd_Click" Command="{x:Static materialDesign:DialogHost.CloseDialogCommand}" Style="{DynamicResource MaterialDesignFlatLightBgButton}" Margin="4" VerticalAlignment="Center">
                                등록
                            </Button>
                            <Button x:Name="BtnGroupCancel" Command="{x:Static materialDesign:DialogHost.CloseDialogCommand}" Style="{DynamicResource MaterialDesignFlatLightBgButton}" Margin="4" VerticalAlignment="Center">
                                취소
                            </Button>
                        </StackPanel>
                    </Grid>
                </materialDesign:DialogHost.DialogContent>
            </materialDesign:DialogHost>
        </StackPanel>

        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Grid.ColumnSpan="2" Grid.RowSpan="3">
            <materialDesign:DialogHost x:Name="DialogNotification" BorderBrush="{DynamicResource MaterialDesignDivider}" VerticalAlignment="Center" HorizontalAlignment="Center">
                <materialDesign:DialogHost.DialogContent>
                    <Grid Width="400" Height="300">
                        <StackPanel Orientation="Horizontal" Margin="15">
                            <TextBlock Foreground="Black" Width="200" Margin="15 5" TextWrapping="Wrap">
                                Trap 알람
                            </TextBlock>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="15">
                            <Button Command="{x:Static materialDesign:DialogHost.CloseDialogCommand}" Style="{DynamicResource MaterialDesignFlatLightBgButton}" Margin="4" VerticalAlignment="Center">
                                확인
                            </Button>
                        </StackPanel>
                    </Grid>
                </materialDesign:DialogHost.DialogContent>
            </materialDesign:DialogHost>
        </StackPanel>

        <Grid Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2">
            <materialDesign:ColorZone
  Mode="PrimaryLight"
  Padding="0">
                <StackPanel
    Orientation="Horizontal">
                    <ToggleButton Style="{DynamicResource MaterialDesignHamburgerToggleButton}" Width="25" Height="25" />
                    <TextBlock VerticalAlignment="Center" Margin="15 0 0 0">
                        AMS
                    </TextBlock>
                </StackPanel>
            </materialDesign:ColorZone>
        </Grid>
        <Grid Grid.Row="1" Grid.Column="0">
            <TreeView x:Name="TreeGroup">
                <TreeView.ContextMenu>
                    <ContextMenu>
                        <MenuItem x:Name="MenuGroupAdd" Header="그룹 추가" Click="MenuGroupAdd_Click" />
                        <MenuItem x:Name="MenuGroupEdit" Header="그룹 수정" Click="MenuGroupEdit_Click" />
                        <MenuItem x:Name="MenuGroupDel" Header="그룹 삭제"  Click="MenuGroupDel_Click" />
                    </ContextMenu>
                </TreeView.ContextMenu>
                <DataTemplate>
                    <DockPanel>
                        <Image Source="/Asset/item/group.png"></Image>
                    </DockPanel>
                </DataTemplate>
            </TreeView>
        </Grid>
        <Grid Grid.Column="1" Grid.Row="1">
            <ScrollViewer Grid.ColumnSpan="2">
                <ScrollViewer.ContextMenu>
                    <ContextMenu>
                        <MenuItem x:Name="MenuMachineAdd" Header="장비 추가" Click="MenuMachineAdd_Click" />
                        <MenuItem x:Name="MenuMachineEdit" Header="장비 수정" Click="MenuMachineEdit_Click" />
                        <MenuItem x:Name="MenuMachineDel" Header="장비 삭제"  Click="MenuMachineDel_Click" />
                    </ContextMenu>
                </ScrollViewer.ContextMenu>
                <ScrollViewer.Background>
                    <ImageBrush ImageSource="/Asset/AtemeLogo.jpg" Stretch="Fill" Opacity="0.04" />
                </ScrollViewer.Background>
                <StackPanel>
                    <StackPanel Margin="10">
                        <ItemsControl x:Name="ListViewServer"
                                  MouseLeftButtonDown="ListViewProducts_MouseLeftButtonDown"
                                  MouseMove="ListViewProducts_MouseMove"
                                  MouseRightButtonDown="ListViewProducts_MouseRightButtonDown">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Margin="2" Width="100" Height="44">
                                        <StackPanel>
                                            <Border Width="92" Height="14" CornerRadius="5" Margin="0">
                                                <Border.Effect>
                                                    <DropShadowEffect ShadowDepth="1" />
                                                </Border.Effect>
                                                <Border.Background>
                                                    <ImageBrush ImageSource="{Binding Image}"></ImageBrush>
                                                </Border.Background>
                                            </Border>
                                            <TextBlock Margin="1" HorizontalAlignment="Center" Text="{Binding GroupName}" FontSize="12" />
                                            <TextBlock Margin="1" HorizontalAlignment="Center" Text="{Binding Name}" FontSize="10" />
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel></WrapPanel>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                        </ItemsControl>
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>
        </Grid>
        <Grid Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2">
            <DockPanel Margin="10 0 10 10">
                <!--
                <ListView x:Name="LvLog"
                          materialDesign:DataGridAssist.CellPadding="4 2 2 2"
                          materialDesign:DataGridAssist.ColumnHeaderPadding="4 2 2 2">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="Time" Width="100" DisplayMemberBinding="{Binding Time}" />
                            <GridViewColumn Header="Level" Width="100" DisplayMemberBinding="{Binding Time}" />
                            <GridViewColumn Header="Server" Width="100" DisplayMemberBinding="{Binding Server}" />
                            <GridViewColumn Header="Info" Width="100" DisplayMemberBinding="{Binding Info}" />
                            <GridViewColumn Header="Desc" Width="100" DisplayMemberBinding="{Binding Desc}" />
                        </GridView>
                    </ListView.View>
                </ListView>
                -->
                <DataGrid x:Name="DgLog"
                    Margin="0 8 0 0"
                    CanUserSortColumns="True"
                    CanUserAddRows="False"
                    materialDesign:DataGridAssist.CellPadding="4 2 2 2"
                    materialDesign:DataGridAssist.ColumnHeaderPadding="4 2 2 2"
                    ScrollViewer.CanContentScroll="True"
                    ScrollViewer.IsDeferredScrollingEnabled="True"
                    ScrollViewer.VerticalScrollBarVisibility="Visible">
                </DataGrid>
            </DockPanel>
        </Grid>
    </Grid>
</Window>
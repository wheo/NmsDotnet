<Window x:Class="NmsDotNet.NmsMainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NmsDotNet"
        mc:Ignorable="d"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        WindowState="Maximized" WindowStyle="ThreeDBorderWindow"
        Title="AMS" MinHeight="800" MinWidth="1080"
        FontFamily="D2Coding"
        WindowStartupLocation="CenterScreen"
        Loaded="Window_Loaded"
        Closing="Window_Closing">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="250" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Grid.ColumnSpan="2" Grid.RowSpan="3">
            <materialDesign:DialogHost x:Name="DialogGroup" BorderBrush="{DynamicResource MaterialDesignDivider}" VerticalAlignment="Center" HorizontalAlignment="Center">
                <materialDesign:DialogHost.DialogContent>
                    <Grid Width="400" Height="300">
                        <StackPanel Orientation="Horizontal" Margin="15">
                            <materialDesign:PackIcon Kind="InfoOutline" Width="50" Height="50" />
                            <TextBox MaxWidth="200" x:Name="TbGroupName" materialDesign:HintAssist.Hint="그룹 이름" />
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="15">
                            <Button x:Name="BtnGroupAdd" Click="BtnGroupAdd_Click" Command="{x:Static materialDesign:DialogHost.CloseDialogCommand}" Style="{DynamicResource MaterialDesignFlatLightBgButton}" Margin="4" VerticalAlignment="Center">
                                등록
                            </Button>
                            <Button x:Name="BtnGroupCancel" Command="{x:Static materialDesign:DialogHost.CloseDialogCommand}" Style="{DynamicResource MaterialDesignFlatLightBgButton}" Margin="4" VerticalAlignment="Center">
                                취소
                            </Button>
                        </StackPanel>
                    </Grid>
                </materialDesign:DialogHost.DialogContent>
            </materialDesign:DialogHost>
        </StackPanel>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Grid.ColumnSpan="2" Grid.RowSpan="3">
            <materialDesign:DialogHost x:Name="DialogServer" BorderBrush="{DynamicResource MaterialDesignDivider}" VerticalAlignment="Center" HorizontalAlignment="Center" DialogOpened="DialogServer_DialogOpened">
                <materialDesign:DialogHost.DialogContent>
                    <Grid Width="400" Height="300">
                        <StackPanel Orientation="Horizontal" Margin="15">
                            <materialDesign:PackIcon Kind="InfoOutline" Width="50" Height="50" />
                            <StackPanel>
                                <TextBox MaxWidth="200" x:Name="TbServerName" materialDesign:HintAssist.Hint="장비 이름"
                                         Style="{StaticResource MaterialDesignFloatingHintTextBox}" />
                                <TextBox MaxWidth="200" x:Name="TbServerIp" materialDesign:HintAssist.Hint="IP" />
                                <ComboBox x:Name="CbGroup" materialDesign:HintAssist.Hint="그룹 선택(필수)">
                                    <ComboBox.ItemTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding Name}" />
                                        </DataTemplate>
                                    </ComboBox.ItemTemplate>
                                </ComboBox>
                            </StackPanel>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="15">
                            <Button x:Name="BtnServerAdd" Click="BtnServerAdd_Click" Command="{x:Static materialDesign:DialogHost.CloseDialogCommand}" Style="{DynamicResource MaterialDesignFlatLightBgButton}" Margin="4" VerticalAlignment="Center">
                                등록
                            </Button>
                            <Button x:Name="BtnServerCancel" Command="{x:Static materialDesign:DialogHost.CloseDialogCommand}" Style="{DynamicResource MaterialDesignFlatLightBgButton}" Margin="4" VerticalAlignment="Center">
                                취소
                            </Button>
                        </StackPanel>
                    </Grid>
                </materialDesign:DialogHost.DialogContent>
            </materialDesign:DialogHost>
        </StackPanel>

        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Grid.ColumnSpan="2" Grid.RowSpan="3">
            <materialDesign:DialogHost x:Name="DialogNotification" BorderBrush="{DynamicResource MaterialDesignDivider}" VerticalAlignment="Center" HorizontalAlignment="Center">
                <materialDesign:DialogHost.DialogContent>
                    <Grid Width="400" Height="300">
                        <StackPanel Orientation="Horizontal" Margin="15">
                            <TextBlock Foreground="Black" Width="200" Margin="15 5" TextWrapping="Wrap">
                                Trap 알람
                            </TextBlock>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="15">
                            <Button Command="{x:Static materialDesign:DialogHost.CloseDialogCommand}" Style="{DynamicResource MaterialDesignFlatLightBgButton}" Margin="4" VerticalAlignment="Center">
                                확인
                            </Button>
                        </StackPanel>
                    </Grid>
                </materialDesign:DialogHost.DialogContent>
            </materialDesign:DialogHost>
        </StackPanel>

        <Grid Grid.Row="0" Grid.Column="0">
            <TreeView x:Name="TreeGroup" MouseRightButtonDown="TreeGroup_MouseRightButtonDown">
                <TreeView.ContextMenu>
                    <ContextMenu>
                        <MenuItem x:Name="MenuGroupAdd" Header="그룹 추가" Click="MenuGroupAdd_Click" />
                        <MenuItem x:Name="MenuGroupEdit" Header="그룹 수정" Click="MenuGroupEdit_Click" />
                        <MenuItem x:Name="MenuGroupDel" Header="그룹 삭제"  Click="MenuGroupDel_Click" />
                    </ContextMenu>
                </TreeView.ContextMenu>
                <TreeView.ItemTemplate>
                    <HierarchicalDataTemplate ItemsSource="{Binding Servers}">
                        <TextBlock Text="{Binding Name}" />
                    </HierarchicalDataTemplate>
                </TreeView.ItemTemplate>
            </TreeView>
        </Grid>
        <Grid Grid.Column="1" Grid.Row="0">
            <WrapPanel>
                <WrapPanel.Background>
                    <ImageBrush ImageSource="/Asset/AtemeLogo.jpg" Stretch="Fill" Opacity="0.04" />
                </WrapPanel.Background>
                <StackPanel>
                    <StackPanel Margin="10">
                        <ListView x:Name="ServerListItem" AllowDrop="True" ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                  MouseDoubleClick="ServerList_MouseDoubleClick"
                                  MouseLeftButtonDown="ServerList_MouseLeftButtonDown"
                                  MouseRightButtonDown="ServerList_MouseRightButtonDown">
                            <ListView.ContextMenu>
                                <ContextMenu>
                                    <MenuItem x:Name="MenuServerAdd" Header="장비 추가" Click="MenuServerAdd_Click" />
                                    <MenuItem x:Name="MenuServerEdit" Header="장비 수정" Click="MenuServerEdit_Click" />
                                    <MenuItem x:Name="MenuServerDel" Header="장비 삭제"  Click="MenuServerDel_Click" />
                                </ContextMenu>
                            </ListView.ContextMenu>
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <Border Margin="2" Width="100" Height="60">
                                        <StackPanel>
                                            <Border Width="92" Height="14" CornerRadius="5" Margin="0">
                                                <Border.Effect>
                                                    <DropShadowEffect ShadowDepth="1" />
                                                </Border.Effect>
                                                <Border.Background>
                                                    <ImageBrush ImageSource="{Binding Image}"></ImageBrush>
                                                </Border.Background>
                                            </Border>
                                            <TextBlock Margin="1" HorizontalAlignment="Center" Text="{Binding Ip}" FontSize="12" />
                                            <TextBlock Margin="1" HorizontalAlignment="Center" Text="{Binding GroupName}" FontSize="12" />
                                            <TextBlock Margin="1" HorizontalAlignment="Center" Text="{Binding Name}" FontSize="10" />
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ListView.ItemTemplate>

                            <ListView.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel></WrapPanel>
                                </ItemsPanelTemplate>
                            </ListView.ItemsPanel>
                        </ListView>
                    </StackPanel>
                </StackPanel>
            </WrapPanel>
        </Grid>
        <Grid Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2">
            <DockPanel Margin="10 0 10 10">
                <!--
                <DataGrid x:Name="DgLog"
                    Margin="0 8 0 0"
                    CanUserSortColumns="True"
                    CanUserAddRows="False" CanUserDeleteRows="False"
                    materialDesign:DataGridAssist.CellPadding="4 2 2 2"
                    materialDesign:DataGridAssist.ColumnHeaderPadding="4 2 2 2"
                    ScrollViewer.CanContentScroll="True"
                    ScrollViewer.IsDeferredScrollingEnabled="True"
                    ScrollViewer.VerticalScrollBarVisibility="Visible">
                </DataGrid>
                -->
                <ListView x:Name="LvLog"
                          ScrollViewer.CanContentScroll="True"
                          ScrollViewer.IsDeferredScrollingEnabled="True"
                          ScrollViewer.VerticalScrollBarVisibility="Visible">
                    <ListView.Resources>
                        <Style TargetType="{x:Type ListViewItem}">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsConfirm}" Value="N">
                                    <Setter Property="Background" Value="Red" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </ListView.Resources>
                    <ListView.View>
                        <GridView AllowsColumnReorder="False" ColumnHeaderToolTip="Log">
                            <GridViewColumn Header="Start at" Width="150"  DisplayMemberBinding="{Binding StartAt }" />
                            <GridViewColumn Header="End at" Width="150"  DisplayMemberBinding="{Binding EndAt }" />
                            <GridViewColumn Header="IP address" Width="130"  DisplayMemberBinding="{Binding Ip }" />
                            <GridViewColumn Header="Level" Width="100"  DisplayMemberBinding="{Binding Level }" />
                            <GridViewColumn Header="Value" Width="1250"  DisplayMemberBinding="{Binding Value }" />
                        </GridView>
                    </ListView.View>
                </ListView>
            </DockPanel>
        </Grid>
    </Grid>
</Window>